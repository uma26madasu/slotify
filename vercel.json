{
    "version": 2,
    "buildCommand": "turbo run build --filter=web && mkdir -p public && cp -r apps/web/dist/* public/",
    "outputDirectory": "public",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}